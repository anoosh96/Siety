
<%provide(:title,"Home") %>


<% if logged_in? %>

<div class="row">

 <aside class="col-md-4">

   <section class="user_info">
     <%= render 'shared/user_info', object: @current_user %>
   </section>

   <section class="stats">
   <%= render 'shared/stats' %>
   </section>

    <section class="microposts_form">
    <%= render 'shared/micropost_form' %>
    </section>


 </aside>

 <div class="col-md-8" >
     <h1>User Feed </h1>
    <%= render 'shared/feed' %>

</div>




</div>
<% else %>
<%= render 'layouts/home_logged_out' %>

<% end %>
