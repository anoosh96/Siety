<% provide(:title, "Password Reset") %>

<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p> Enter Email, A password reset link will be sent to you.</p>
    <%= form_for(:reset, url: password_resets_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.submit "Send", class: 'btn btn-primary form_control' %>

    <% end %>
</div>

</div>
